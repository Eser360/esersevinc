---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { t } from "@config";
import { Icon } from "astro-icon/components";
import MainCard from "@/components/MainCard.astro";
import LinkCard from "@/components/mdx/LinkCard.astro";
import FriendCard from "@/components/mdx/FriendCard.astro";
---

<BaseLayout title="Friends - Links & Resources">
  <MainCard
    title="Arkadaşlar & Bağlantılar"
    description="Diğer web sitelerim, arkadaşlarım ve internette gezinirken beğendiğim web siteleri."
    textOverlay="LINKS"
    infoIcon="lucide:link"
  >
    <div class="space-y-10">
      <!-- Friends Section -->
      <section>
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
          <Icon name="lucide:users" class="w-6 h-6 text-primary" />
          <span>Web Sitelerim</span>
        </h2>

        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
          <FriendCard
            name="Hayalmeyal"
            avatar="/image/hmkare.png"
            description="Bisiklet üzerine her şeyi konuşan, Açık kaynak yazılımlar ve Linux hakkında paylaşımlar yapan, Sinema, Dizi, Müzik ve Kitap listeleri bulabileceğiniz, eski nesil blog."
            url="https://hayalmeyal.org"
            type="friend"
          />
          <FriendCard
            name="Klas Adam"
            avatar="https://i0.wp.com/klasadam.com/wp-content/uploads/2024/12/KlasAdamIconSmall.png"
            description="Klas Adam; Klas erkeklerin yaşam stil rehberi."
            url="https://klasadam.com/"
            type="friend"
          />
          <FriendCard
            name="Eser360"
            avatar="https://avatars.githubusercontent.com/u/57937339?"
            description="Eser360 - Github"
            url="https://github.com/Eser360"
            type="friend"
          />
        </div>
      </section>

      <!-- Arkadaşlar -->
      <section>
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
          <Icon name="lucide:git-pull-request" class="w-6 h-6 text-primary" />
          <span>Arkadaşlar</span>
        </h2>

        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
          <FriendCard
            name="Serdar Yavuz"
            avatar="https://github.com/rserdar.png"
            description=""
            url="https://serdar.cc"
            type="contributor"
          />
        </div>
      </section>

      <!-- Yararlı Bağlantılar -->
      <section>
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
          <Icon name="lucide:bookmark" class="w-6 h-6 text-primary" />
          <span>Yararlı Kaynaklar</span>
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <LinkCard
            title="Neden Sadece Niş Bir Konu Üzerine İçerik Üretmelisin?"
            desc="İçerik üretirken bir nişe sahip olmanın önemi büyüktür. Niş, belirli bir konuda uzmanlaşmanızı ve hedef kitlenizi oluşturmanızı kolaylaştırır."
            url="https://www.hayalmeyal.org/2025/02/neden-sadece-nis-bir-konu-uzerine.html"
            target="_blank"
            icon="simple-icons:blogger"
            categories={["Blog", "İçerik Yazarlığı"]}
          />

          <LinkCard
            title="Blog Yazmanın Evrimsel Tarihi"
            desc="Blog yazmak, kişisel web sayfalarının yaygınlaşmasıyla birlikte 90'lı yılların sonunda ortaya çıkmaya başladı ve günümüzde dijital iletişimin görünmeyen yüzünde kalan ama hala temelini oluşturan içeriklerdir."
            url="https://www.hayalmeyal.org/2025/01/blog-yazmann-evrimsel-tarihi.html"
            target="_blank"
            icon="simple-icons:blogger"
            categories={["Blog", "İçerik Yazarlığı"]}
          />

          <LinkCard
            title="SEO Uyumlu Taranabilir Metin Yazmanın 9 Etkili Yolu"
            desc="Web için yazmak diğer tüm yazı formatlarından farklıdır. Genellikle web'de gerçek bir derinlikle okumayız; kullanıcılar bilgiye hızlıca ulaşmak için tarayarak okurlar."
            url="https://www.hayalmeyal.org/2024/09/taranabilir-metin-yazmanin-9-etkili-yolu.html"
            target="_blank"
            icon="simple-icons:blogger"
            categories={["Blog", "SEO"]}
          />

          <LinkCard
            title="Kaliteli Blog İçeriği Üretmek İçin Eksiksiz Rehber"
            desc="Blog yazmak, bilgi paylaşmanın ve okuyucularınızla etkileşimde bulunmanın güçlü bir yoludur. Blog yazarken, yapacağınız SEO çalışmalarından ziyade; harika içerik oluşturmak, getirisi daha da büyük olan bir yatırımdır."
            url="https://www.typescriptlang.org/docs/handbook/intro.html"
            target="_blank"
            icon="simple-icons:blogger"
            categories={["Blog", "İçerik Yazarlığı"]}
          />
        </div>
      </section>

      <div class="divider my-8">
        <Icon name="lucide:heart" class="w-10 h-10 text-primary" />
      </div>

      <div class="text-center">
        <p class="text-base-content/80 mb-4">
          Bu sayfada yer almak ister misiniz? Bana ulaşmaktan ve sayfanızın linkini paylaşmaktan çekinmeyin!
        </p>
        <a
          href="/contact"
          rel="noopener noreferrer"
          class="btn btn-primary gap-2"
        >
          <Icon name="lucide:mail" class="w-5 h-5" />
          <span>İletişime Geç</span>
        </a>
      </div>
    </div>
  </MainCard>
</BaseLayout>
